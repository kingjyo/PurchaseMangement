<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- 기본 테마 (라이트 모드) -->
    <style name="Theme.PurchaseRequest" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- 기본 색상 -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/success_color</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- 보조 색상 -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/info_color</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- 배경 색상 -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/background_white</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- 상태바 및 네비게이션바 -->
        <item name="android:statusBarColor">@color/primary_color</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/background_white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>

        <!-- 기타 UI 요소 -->
        <item name="colorError">@color/error_color</item>
        <item name="colorOnError">@color/white</item>

        <!-- 텍스트 색상 -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>

        <!-- 입력창 색상 -->
        <item name="colorControlNormal">@color/text_secondary</item>
        <item name="colorControlActivated">@color/primary_color</item>
        <item name="colorControlHighlight">@color/primary_color</item>

        <!-- 글꼴 크기 (60대 친화적) -->
        <item name="android:textSize">18sp</item>

        <!-- 윈도우 설정 -->
        <item name="android:windowBackground">@color/background_light</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <!-- 스플래시 스크린 테마 (옵션) -->
    <style name="Theme.PurchaseRequest.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary_color</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.PurchaseRequest</item>
    </style>

    <!-- 다이얼로그 테마 -->
    <style name="Theme.PurchaseRequest.Dialog" parent="ThemeOverlay.Material3.Dialog.Alert">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- 큰 버튼 스타일 -->
    <style name="Widget.PurchaseRequest.Button.Large" parent="Widget.Material3.Button">
        <item name="android:layout_width">320dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">8dp</item>
        <item name="cornerRadius">16dp</item>
    </style>

    <!-- 일반 버튼 스타일 -->
    <style name="Widget.PurchaseRequest.Button" parent="Widget.Material3.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:elevation">4dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 입력창 스타일 -->
    <style name="Widget.PurchaseRequest.EditText" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_hint</item>
    </style>

    <!-- 제목 텍스트 스타일 -->
    <style name="Widget.PurchaseRequest.TextView.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 라벨 텍스트 스타일 -->
    <style name="Widget.PurchaseRequest.TextView.Label" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- 카드 스타일 -->
    <style name="Widget.PurchaseRequest.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/background_white</item>
        <item name="contentPadding">16dp</item>
    </style>

</resources>