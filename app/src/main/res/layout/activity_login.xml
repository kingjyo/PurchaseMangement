<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <!-- 로고/아이콘 영역 -->
    <LinearLayout
        android:id="@+id/logoContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp">

        <!-- 앱 아이콘 -->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginBottom="24dp" />

        <!-- 앱 제목 -->
        <TextView
            android:id="@+id/tvAppTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="구매신청 시스템"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="16dp" />

        <!-- 설명 -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="간편하게 로그인하여\n구매신청을 시작하세요"
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="48dp" />

        <!-- 로그인 버튼들 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Google 로그인 버튼 -->
            <com.google.android.gms.common.SignInButton
                android:id="@+id/btnGoogleSignIn"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:buttonSize="wide"
                app:colorScheme="light"
                android:layout_marginBottom="12dp" />

            <!-- 네이버 로그인 버튼 -->
            <Button
                android:id="@+id/btnNaverSignIn"
                android:layout_width="280dp"
                android:layout_height="56dp"
                android:text="네이버 아이디로 로그인"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/naver_login_button_bg"
                android:drawableStart="@drawable/ic_naver_logo"
                android:drawablePadding="8dp"
                android:paddingHorizontal="20dp"
                android:gravity="center" />

        </LinearLayout>

        <!-- 또는 구분선 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/divider" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 또는 "
                android:textSize="14sp"
                android:textColor="@color/text_hint"
                android:paddingHorizontal="16dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/divider" />

        </LinearLayout>


    </LinearLayout>

    <!-- 로딩 프로그레스 -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <!-- 하단 정보 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:text="v1.0 | Powered by Accompany"
        android:textSize="12sp"
        android:textColor="@color/text_hint" />

</RelativeLayout>